		<field name="ADMOB_IOS_BANNER" label="Admob iOS Banner" type="string" rules="string"  maxLength="" />
		<field name="ADMOB_IOS_INTERSTITIAL" label="Admob iOS Interstitial" type="string" rules="string"  maxLength="" />
	</file>
